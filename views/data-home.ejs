<html>
    <head>
        <link rel="stylesheet" href="/libs/bootstrap.min.css">
        <link rel="stylesheet" href="/libs/bootstrap-icons-1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="/global.css">
        <link rel="icon" type="image/png" href="/g3.png">
        <script src="/libs/jquery-3.7.1.min.js"></script>
        <script src="/global.js"></script>
        <title>G3 Scouting!</title>
    </head>

    <%- nav %>

    <div id="sheets">

        <h1>Welcome to the data manager!</h1>
        <% if (sheets[0]) { %>
            <h3>Please select a sheet below.</h3>
            <% for (let i=0; i < sheets.length; i++) { %>
                <a href="/data?sheet=<%=sheets[i]%>">#<%=i+1%>: <%=sheets[i]%></a><br>
            <% } %>
        <% } else { %>
            <h3>No sheets were found! Contact your server administrator if you think this is an issue.</h3>
        <% } %>

    </div>
</html>

<script>$("#nav-data").addClass("active")</script>

<style>


    #sheets {
        margin: 20px;
    }

    #sheets h1 {
        font-size: 60px;
    }

    #sheets h3 {
        font-size: 45px;
    }

    #sheets a {
        font-size: 30px;
    }

    body {
        background-color: rgb(255, 73, 73);
    }

    a {
        color: black;
        font-size: large;
    }

    .head-buttons a {
        text-decoration: none;
    }
</style>    