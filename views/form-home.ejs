<html>
    <head>
        <link rel="stylesheet" href="/libs/bootstrap.min.css">
        <link rel="stylesheet" href="/libs/bootstrap-icons-1.11.3/font/bootstrap-icons.min.css">
        <link rel="icon" type="image/png" href="/g3.png">
        <link rel="stylesheet" href="/global.css">
        <title>G3 Scouting!</title>
    </head>

    <nav class="navbar navbar-expand bg-light">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/forms">Forms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/data">Data</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="forms">

        <h1>Welcome to the scouting forms page!</h1>
        <% if (sheets[0]) { %>
            <h3>Please select a form below.</h3>
            <% for (let i=0; i < sheets.length; i++) { %>
                <a href="/forms?form=<%=sheets[i]%>">#<%=i+1%>: <%=sheets[i]%></a><br>
            <% } %>
        <% } else { %>
            <h3>No forms were found! Contact your server administrator if you think this is an issue.</h3>
        <% } %>

    </div>
</html>

