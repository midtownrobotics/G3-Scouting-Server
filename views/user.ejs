<html>
    <head>
        <link rel="stylesheet" href="/libs/bootstrap.min.css">
        <link rel="stylesheet" href="/libs/bootstrap-icons-1.11.3/font/bootstrap-icons.min.css">
        <link rel="icon" type="image/png" href="/g3.png">
        <link rel="stylesheet" href="/global.css">
        <title>G3 Scouting!</title>
        <script src="/libs/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
        <script src="/global.js"></script>
    </head>
    <body>

        <nav class="navbar navbar-expand bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/forms">Forms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/data">Data</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="main">

            <h1>Hello <%= username %>!</h1>

            <hr>

            <h2>Next Match Info:</h2>
            <p>Matches Until: <span id="nm-mu"></span></p>
            <p>Number: <span id="nm-number"></span></p>
            <p>Team Number: <span id="nm-team"></span></p>
            <p>Team Name: <span id="nm-teamname"></span></p>
            <p>Station: <span id="nm-station"></span></p>
            <p>High Priority: <span id="nm-hp"></span></p>

            <hr>

            <h2>Your Schedule:</h2><br>
            <table class="table">

                <tbody id="table">
                </tbody>
            </table>

            <button class="btn btn-link">
                <i id="reload" class="bi bi-arrow-clockwise"></i>
            </button>

        </div>

    </body>
</html>

<style>

    #top-row {
        top: 0px;
        position: sticky;
    }

    #reload {
        transition-duration: 1s;
        transition-property: transform;
        position: absolute;
        right: 30px;
        color: black;
    }

    body {
        background-color: rgb(255, 73, 73);
    }

    #main {
        margin: 20px;
    }

    h1 {
        text-decoration: underline;
    }

    p {
        margin-bottom: 10px;
    }

    table {
        width: calc(100% - 40px) !important;
    }

    /* Mobile Landscape Only */

    @media (orientation: landscape) and (max-width: 1025px) {
        #reload {
            top: 110px;
            font-size: 80px;
        }

        p {
            font-size: 30px;
        }

        h2 {
            font-size: 40px;
        }

        h1 {
            font-size: 50px;
        }

        td {
            font-size: 20px;
        }
    }

    /* Mobile Portrait Only */

    @media (orientation: portrait) and (max-width: 1025px) {
        #reload {
            top: 140px;
            font-size: 80px;
        }

        p {
            font-size: 50px;
        }

        h2 {
            font-size: 100px;
        }

        h1 {
            font-size: 120px;
        }

        td {
            font-size: 40px;
        }
    }

    /* Desktop Only */

    @media (min-width: 1025px) {
        #reload {
            top: 110px;
            font-size: 50px;
        }

        p {
            font-size: 25px;
        }

        h2 {
            font-size: 50px;
        }

        h1 {
            font-size: 60px;
        }

        td {
            font-size: 25px;
        }
    }

</style>
<script src="/user/user.js"></script>