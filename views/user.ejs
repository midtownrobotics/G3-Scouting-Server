<html>
    <head>
        <link rel="stylesheet" href="/libs/bootstrap.min.css">
        <link rel="stylesheet" href="/libs/bootstrap-icons-1.11.3/font/bootstrap-icons.min.css">
        <link rel="icon" type="image/png" href="/g3.png">
        <link rel="stylesheet" href="/global.css">
        <title>G3 Scouting!</title>
        <script src="/libs/jquery-3.7.1.min.js"></script>
        <script>var exports = {};</script>
        <script type="module" src="/js/global.js"></script>
    </head>
    <body>

        <%- nav %>

        <div id="main">

            <h1 style="text-align:center; text-decoration: none;">Hello <%= username %>!</h1>

            <hr>

            <div style="text-align:center;">
                <h2>Current status:</h2>
                <p>Block: <b><%= current.time %></b></p>
                <p>Status: <b><%= current.status == "break" ? "Break/Other" : "Scouting" %></b></p>
                <p>Until: <b><%= "Day " + current.until.split("-").join(" @ ") %></b></p>    
            </div>

            <hr>

            <h2 style="text-align:center;">Your Schedule:</h2>
            <table class="table table-dark" style="width: 40% !important; min-width: 300px; margin-left:auto; margin-right:auto;">
                <thead>
                    <tr>
                        <td>Time</td>
                        <td>Status</td>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < schedule.length; i++) { %>
                        <tr class=<%= schedule[i].status == "break" ? "table-primary" : "table" %> !important;">
                            <td class="table-dark"><%= schedule[i].time %></td>
                            <td class="table-dark"><%= schedule[i].status %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>

        </div>

    </body>
</html>

<script>$("#nav-home").addClass("active")</script>

<style>

    #top-row {
        top: 0px;
        position: sticky;
    }

    #reload {
        transition-duration: 1s;
        transition-property: transform;
        position: absolute;
        right: 30px;
        color: black;
    }

    /* body {
        background-color: 
    } */

    #main {
        margin: 20px;
    }

    h1 {
        text-decoration: underline;
    }

    p {
        margin-bottom: 10px;
    }

    table {
        width: calc(100% - 40px) !important;
    }

    /* Mobile Landscape Only */

    @media (orientation: landscape) and (max-width: 1025px) {
        #reload {
            top: 110px;
            font-size: 80px;
        }

        p {
            font-size: 30px;
        }

        h2 {
            font-size: 40px;
        }

        h1 {
            font-size: 50px;
        }

        td {
            font-size: 20px;
        }
    }

    /* Mobile Portrait Only */

    @media (orientation: portrait) and (max-width: 1025px) {
        #reload {
            top: 140px;
            font-size: 80px;
        }

        p {
            font-size: 50px;
        }

        h2 {
